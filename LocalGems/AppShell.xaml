<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LocalGems.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LocalGems"
    Shell.FlyoutBehavior="Flyout"
    Title="LocalGems">

    <Shell.FlyoutHeader>
        <Grid Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Source="{Binding UserPhoto}" HeightRequest="100" WidthRequest="100"/>
            <Label Text="{Binding UserName}" Grid.Row="1"/>
            <!-- Możesz dodać więcej elementów, np. adres email -->
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Strona 1">
        <ShellContent Route="strona1" ContentTemplate="{DataTemplate local:HomePage}" />
    </FlyoutItem>
    <FlyoutItem Title="Strona 2">
        <ShellContent Route="strona2" ContentTemplate="{DataTemplate local:HomePage}" />
    </FlyoutItem>
    
    
</Shell>
